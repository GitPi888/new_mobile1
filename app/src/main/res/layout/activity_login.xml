<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:text="Welcome Back"
        android:textColor="#000000"
        android:textSize="42sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Sign in to continue"
        android:textColor="#989898"
        android:textSize="20sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="#989898"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="#CF9FFF"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:startIconTint="#CF9FFF">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:backgroundTint="#EFEDED"
            android:hint="Email"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:textColorHint="#989898"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="#CF9FFF"
        app:endIconMode="password_toggle"
        app:endIconTint="#CF9FFF"
        app:startIconDrawable="@drawable/baseline_add_moderator_24"
        app:startIconTint="#CF9FFF">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EFEDED"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:backgroundTint="@android:color/transparent"
        android:onClick="forgotPassword"
        android:text="Forgot Password?"
        android:textColor="#6A6A6A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />
    <Button
        android:id="@+id/q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/sign_in_facebook_btn"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="multiply"
        android:text="Sign in with Facebook"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#DA70D6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Create new account?"
            android:textColor="#989898"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center|start"
            android:onClick="Create"
            android:text="Sign up"
            android:stateListAnimator="@null"
            android:textColor="#DA70D6"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button_Login"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#CF9FFF"
        android:onClick="clickToLogin"
        android:padding="12dp"
        android:textColor="@color/white"
        android:text="Login"
        android:textSize="22sp"
        android:background="@drawable/btn_updatepassword"
         />

</LinearLayout>