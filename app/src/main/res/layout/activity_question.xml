<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.QuestionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarQuestion"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#BDB5D5"></androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/quizzTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="QuiZz"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/round_txt"
            android:padding="16dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="5/10"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/q1"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/sign_in_facebook_btn"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="multiply"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Question 1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#E0B0FF"
            app:cornerRadius="16dp" />

        <Button
            android:id="@+id/q2"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/sign_in_facebook_btn"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="multiply"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Question 2"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#E0B0FF"
            app:cornerRadius="16dp" />

        <Button
            android:id="@+id/q3"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/sign_in_facebook_btn"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="multiply"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Question 3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#E0B0FF"
            app:cornerRadius="16dp" />

        <Button
            android:id="@+id/q4"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/sign_in_facebook_btn"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="multiply"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Question 4"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#E0B0FF"
            app:cornerRadius="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/shareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#8E8D8D"
            android:text="Share" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.7"
            android:backgroundTint="#DA70D6"
            android:enabled="false"
            android:text="Next" />
    </LinearLayout>

</LinearLayout>
